<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <welcome-file-list>
        <welcome-file>login.jsp</welcome-file>
    </welcome-file-list>
    <filter>
        <filter-name>LoginFilter</filter-name>
        <filter-class>com.j2ee.edu_admi.filter.LoginFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>LoginFilter</filter-name>
        <servlet-name>AddStudentServlet</servlet-name>
        <servlet-name>AddTeacherServlet</servlet-name>
        <servlet-name>CourseManageServlet</servlet-name>
        <servlet-name>ScoreServlet</servlet-name>
        <servlet-name>SelectCourseServlet</servlet-name>
        <servlet-name>ShowSelectedCourseServlet</servlet-name>
        <servlet-name>StudentInfoServlet</servlet-name>
        <servlet-name>TeacherCoursesServlet</servlet-name>
        <servlet-name>UserInfoServlet</servlet-name>
        <servlet-name>UserManageServlet</servlet-name>
    </filter-mapping>
</web-app>